@model GetByIdTestimonialDTO
@{
    ViewData["Title"] = "Referans Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="header">
    <div>
        <h2>Referans Detayı</h2>
        <p style="color: rgba(255, 255, 255, 0.7); margin-top: 0.5rem;">Referansa ait detaylı bilgilere buradan ulaşabilirsiniz.</p>
    </div>
</header>

<div class="detail-card shadow">
    <h4 class="mb-4">@Model.Name - Referans Detayları</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="detail-item">
                <i class="fas fa-id-badge"></i> <strong>ID:</strong> <span>@Model.TestimonialId</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-user"></i> <strong>Adı:</strong> <span>@Model.Name</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-briefcase"></i> <strong>Görevi:</strong> <span>@Model.Duty</span>
            </div>
            <div class="detail-item align-items-start">
                <i class="fas fa-comment"></i> <strong>Açıklama:</strong> <span>@Model.Description</span>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end mt-4">
        <a asp-action="Index" class="btn btn-secondary me-2">
            <i class="fas fa-arrow-left"></i> Referanslara Geri Dön
        </a>
    </div>
</div>