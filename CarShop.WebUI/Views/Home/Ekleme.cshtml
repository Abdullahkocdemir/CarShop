@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="header">
    <div>
        <h2>Yeni Ürün Ekle</h2>
        <p style="color: rgba(255, 255, 255, 0.7); margin-top: 0.5rem;">Yeni bir ürün girişi yapın.</p>
    </div>
    <div class="user-info">
        <div class="user-avatar">AK</div>
        <div>
            <div>Admin Kullanıcı</div>
            <div style="font-size: 0.8rem; opacity: 0.7;">admin@example.com</div>
        </div>
    </div>
</header>

<div class="form-card">
    <form>
        <div class="mb-3">
            <label for="productName" class="form-label">Ürün Adı</label>
            <input type="text" class="form-control" id="productName" placeholder="Ürün adını girin" required>
        </div>
        <div class="mb-3">
            <label for="productBrand" class="form-label">Marka</label>
            <input type="text" class="form-control" id="productBrand" placeholder="Markayı girin" required>
        </div>
        <div class="mb-3">
            <label for="productPrice" class="form-label">Fiyat (₺)</label>
            <input type="number" class="form-control" id="productPrice" placeholder="Fiyatı girin" step="0.01" required>
        </div>
        <div class="mb-3">
            <label for="productStock" class="form-label">Stok Adedi</label>
            <input type="number" class="form-control" id="productStock" placeholder="Stok adedini girin" required>
        </div>
        <div class="mb-4">
            <label for="productDescription" class="form-label">Açıklama</label>
            <textarea class="form-control" id="productDescription" rows="3" placeholder="Ürün açıklaması"></textarea>
        </div>
        <div class="d-flex justify-content-end">
            <a href="urunler.html" class="btn btn-secondary me-2">İptal</a>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>
