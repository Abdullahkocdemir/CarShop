@{
    ViewData["Title"] = "Index5";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OBerlo - Modern Premium Car Showroom</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700;800&family=Playfair+Display:wght@700;900&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #6a0572; /* Deep Purple */
            --secondary-color: #ab1f95; /* Vibrant Magenta */
            --accent-color-1: #fed330; /* Bright Yellow */
            --accent-color-2: #34ace0; /* Sky Blue */
            --text-light: #ffffff;
            --text-dark: #333333;
            --bg-light: #f0f2f5;
            --card-bg: rgba(255, 255, 255, 0.95);
            --shadow-strong: 0 20px 40px rgba(0, 0, 0, 0.15);
            --shadow-light: 0 10px 20px rgba(0, 0, 0, 0.08);
            --gradient-main: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            --gradient-hero: linear-gradient(135deg, #4b0082 0%, #8a2be2 100%); /* Indigo to Blue Violet */
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            line-height: 1.8;
            color: var(--text-dark);
            overflow-x: hidden;
            background-color: var(--bg-light);
        }

        /* Header & Navigation */
        .header {
            position: fixed;
            top: 0;
            width: 100%;
            background: rgba(0, 0, 0, 0.85);
            backdrop-filter: blur(10px);
            z-index: 1000;
            transition: all 0.4s ease;
            box-shadow: var(--shadow-strong);
        }

        .nav-container {
            max-width: 1400px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 3rem;
        }

        .logo {
            font-family: 'Playfair Display', serif;
            font-size: 2.8rem;
            font-weight: 900;
            color: var(--text-light);
            text-decoration: none;
            background: linear-gradient(45deg, var(--accent-color-1), var(--accent-color-2));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-shadow: 0 3px 10px rgba(0, 0, 0, 0.4);
            letter-spacing: 1px;
        }

        .nav-menu {
            display: flex;
            list-style: none;
            gap: 3rem;
        }

        .nav-link {
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            padding: 0.8rem 1.6rem;
            border-radius: 30px;
            transition: all 0.3s ease;
            position: relative;
            font-weight: 600;
            letter-spacing: 0.5px;
            overflow: hidden;
        }

            .nav-link::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: rgba(255, 255, 255, 0.15);
                transform: skewX(-20deg);
                transition: left 0.5s cubic-bezier(0.2, 0.8, 0.2, 1);
                z-index: 0;
            }

            .nav-link:hover::before {
                left: 100%;
            }

            .nav-link span {
                position: relative;
                z-index: 1;
            }

            .nav-link:hover,
            .nav-link.active {
                color: var(--text-light);
                background: var(--gradient-main);
                box-shadow: 0 8px 25px rgba(106, 5, 114, 0.5);
                transform: translateY(-3px);
                opacity: 1;
            }

        /* Hero Section */
        .hero {
            height: 100vh;
            background: var(--gradient-hero);
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .hero::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('https://www.transparenttextures.com/patterns/carbon-fibre-v2.png'); /* A subtle pattern */
                opacity: 0.1;
                z-index: 0;
            }

        .hero-content {
            position: relative;
            z-index: 2;
            color: var(--text-light);
            max-width: 1000px;
            padding: 4rem;
            animation: fadeIn 1.5s ease-out;
            background: rgba(0, 0, 0, 0.2);
            border-radius: 20px;
            backdrop-filter: blur(5px);
            box-shadow: var(--shadow-strong);
        }

        .hero h1 {
            font-family: 'Playfair Display', serif;
            font-size: 5.5rem;
            font-weight: 900;
            margin-bottom: 1.8rem;
            text-shadow: 0 8px 30px rgba(0, 0, 0, 0.5);
            line-height: 1.1;
            background: linear-gradient(45deg, var(--accent-color-1), var(--accent-color-2));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: textPop 1.5s ease-out forwards;
        }

        .hero p {
            font-size: 1.6rem;
            margin-bottom: 3.5rem;
            opacity: 0.9;
            animation: fadeInUp 1.2s ease-out 0.5s both;
            line-height: 1.5;
        }

        .cta-button {
            display: inline-block;
            padding: 1.4rem 3.5rem;
            background: var(--gradient-main);
            color: var(--text-light);
            text-decoration: none;
            border-radius: 50px;
            font-weight: 700;
            font-size: 1.3rem;
            transition: all 0.4s ease;
            box-shadow: 0 15px 40px rgba(106, 5, 114, 0.4);
            animation: fadeInUp 1.2s ease-out 0.8s both;
            border: none;
            cursor: pointer;
            letter-spacing: 1px;
            position: relative;
            overflow: hidden;
        }

            .cta-button::after {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: rgba(255, 255, 255, 0.3);
                transform: skewX(-20deg);
                transition: left 0.5s ease-out;
            }

            .cta-button:hover::after {
                left: 100%;
            }

            .cta-button:hover {
                transform: translateY(-7px) scale(1.03);
                box-shadow: 0 20px 50px rgba(106, 5, 114, 0.6);
            }

        /* General Sections */
        .section-padding {
            padding: 10rem 3rem;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .section-title {
            text-align: center;
            font-family: 'Playfair Display', serif;
            font-size: 4.5rem;
            font-weight: 900;
            margin-bottom: 2rem;
            background: var(--gradient-main);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            line-height: 1.2;
        }

        .section-subtitle {
            text-align: center;
            font-size: 1.6rem;
            color: #666;
            margin-bottom: 6rem;
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
            line-height: 1.7;
        }

        /* About Section */
        .about {
            background: linear-gradient(135deg, #e0e5ec 0%, #ffffff 100%);
            position: relative;
        }

        .about-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 6rem;
            align-items: center;
        }

        .about-text {
            background: var(--card-bg);
            padding: 5rem;
            border-radius: 30px;
            box-shadow: var(--shadow-strong);
            transform: perspective(1000px) rotateY(0deg);
            transition: all 0.7s cubic-bezier(0.2, 0.8, 0.2, 1);
            border-top: 8px solid var(--accent-color-1);
        }

            .about-text:hover {
                transform: perspective(1000px) rotateY(3deg) translateY(-10px);
                box-shadow: 0 35px 70px rgba(0, 0, 0, 0.3);
            }

            .about-text h3 {
                font-family: 'Playfair Display', serif;
                font-size: 3rem;
                margin-bottom: 2rem;
                color: var(--primary-color);
                position: relative;
            }

                .about-text h3::after {
                    content: '';
                    position: absolute;
                    left: 0;
                    bottom: -10px;
                    width: 80px;
                    height: 4px;
                    background: var(--accent-color-2);
                    border-radius: 5px;
                }

            .about-text p {
                margin-bottom: 2.2rem;
                font-size: 1.2rem;
                color: #555;
                line-height: 1.8;
            }

        .about-image {
            height: 500px;
            background: var(--gradient-main);
            border-radius: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 8rem;
            color: var(--text-light);
            box-shadow: var(--shadow-strong);
            position: relative;
            overflow: hidden;
            transition: all 0.7s ease;
            transform: scale(1);
        }

            .about-image:hover {
                transform: scale(1.05);
                box-shadow: 0 35px 70px rgba(0, 0, 0, 0.4);
            }

            .about-image::after {
                content: '';
                position: absolute;
                width: 150%;
                height: 150%;
                background: rgba(255, 255, 255, 0.1);
                transform: rotate(45deg);
                animation: shine 3s infinite ease-out;
                opacity: 0;
            }

            .about-image:hover::after {
                opacity: 1;
            }

            .about-image i {
                animation: float 5s ease-in-out infinite;
                text-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
            }

        /* Models Section */
        .models {
            background: var(--gradient-hero);
            color: var(--text-light);
        }

            .models .section-title,
            .models .section-subtitle {
                background: linear-gradient(45deg, var(--accent-color-1), var(--accent-color-2));
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                text-shadow: none;
            }

        .models-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 4rem;
            margin-top: 6rem;
        }

        .model-card {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 30px;
            padding: 3rem;
            transition: all 0.5s ease-in-out;
            position: relative;
            overflow: hidden;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            border-bottom: 8px solid var(--accent-color-1);
        }

            .model-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 10px;
                background: var(--gradient-main);
            }

            .model-card:hover {
                transform: translateY(-20px) scale(1.04);
                box-shadow: 0 40px 80px rgba(0, 0, 0, 0.5);
                background: rgba(255, 255, 255, 0.2);
                border-color: rgba(255, 215, 0, 0.7);
            }

        .model-image {
            height: 250px;
            background: rgba(255, 255, 255, 0.08);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 2.5rem;
            font-size: 5rem;
            color: var(--accent-color-1);
            border: 2px dashed rgba(255, 215, 0, 0.4);
            overflow: hidden;
        }

            .model-image i {
                animation: zoomIn 1s ease-out;
                text-shadow: 0 3px 10px rgba(0, 0, 0, 0.3);
            }

        .model-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            color: var(--text-light);
            letter-spacing: 1px;
            text-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        .model-price {
            font-size: 2.8rem;
            font-weight: 800;
            color: var(--accent-color-1);
            margin-bottom: 2rem;
            text-shadow: 0 3px 10px rgba(0, 0, 0, 0.4);
            background: linear-gradient(45deg, var(--accent-color-1), var(--accent-color-2));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .model-description {
            margin-bottom: 2.5rem;
            opacity: 0.9;
            line-height: 1.8;
            flex-grow: 1;
            font-size: 1.15rem;
        }

        .read-more {
            display: inline-block;
            padding: 1.2rem 2.5rem;
            background: var(--gradient-main);
            color: white;
            text-decoration: none;
            border-radius: 40px;
            font-weight: 600;
            transition: all 0.4s ease;
            align-self: flex-start;
            box-shadow: 0 10px 25px rgba(106, 5, 114, 0.3);
            letter-spacing: 0.5px;
            position: relative;
            overflow: hidden;
            z-index: 1;
        }

            .read-more::after {
                content: '\2192'; /* Right arrow */
                position: absolute;
                right: 15px;
                top: 50%;
                transform: translateY(-50%);
                opacity: 0;
                transition: right 0.3s ease, opacity 0.3s ease;
                font-weight: 900;
            }

            .read-more:hover {
                transform: translateY(-5px) scale(1.02);
                box-shadow: 0 15px 35px rgba(106, 5, 114, 0.5);
                padding-right: 3.5rem; /* Make space for arrow */
            }

                .read-more:hover::after {
                    right: 10px;
                    opacity: 1;
                }

        /* Stats Section */
        .stats {
            background: linear-gradient(135deg, var(--accent-color-1) 0%, var(--accent-color-2) 100%);
            color: white;
            position: relative;
            overflow: hidden;
        }

            .stats::before {
                content: '';
                position: absolute;
                top: -20%;
                left: -20%;
                width: 140%;
                height: 140%;
                background: url('https://www.transparenttextures.com/patterns/cubes.png');
                opacity: 0.1;
                transform: rotate(15deg);
                z-index: 0;
            }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 3rem;
            position: relative;
            z-index: 1;
        }

        .stat-card {
            text-align: center;
            background: rgba(0, 0, 0, 0.2);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 25px;
            padding: 4rem 3rem;
            transition: all 0.4s ease;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
            position: relative;
            overflow: hidden;
        }

            .stat-card::before {
                content: '';
                position: absolute;
                top: -10px;
                right: -10px;
                width: 40px;
                height: 40px;
                background: var(--primary-color);
                border-radius: 50%;
                filter: blur(15px);
                animation: pulse 3s infinite alternate;
            }

            .stat-card:hover {
                transform: translateY(-12px) scale(1.03);
                background: rgba(0, 0, 0, 0.3);
                box-shadow: 0 25px 55px rgba(0, 0, 0, 0.4);
                border-color: rgba(255, 255, 255, 0.5);
            }

        .stat-number {
            font-family: 'Playfair Display', serif;
            font-size: 4.5rem;
            font-weight: 800;
            margin-bottom: 1rem;
            color: var(--text-light);
            text-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
            background: linear-gradient(45deg, var(--text-light), var(--accent-color-1));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .stat-label {
            font-size: 1.4rem;
            opacity: 0.98;
            font-weight: 700;
            letter-spacing: 0.8px;
        }

        /* Featured Vehicles */
        .featured {
            background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
        }

            .featured .section-title {
                background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

            .featured .section-subtitle {
                color: #555;
            }

        .featured-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 3rem;
            margin-top: 5rem;
        }

        .featured-card {
            background: var(--card-bg);
            backdrop-filter: blur(10px);
            border-radius: 25px;
            padding: 3rem;
            box-shadow: var(--shadow-dark);
            transition: all 0.4s ease;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            border-bottom: 8px solid var(--accent-color-2);
        }

            .featured-card:hover {
                transform: translateY(-15px) scale(1.03);
                box-shadow: 0 35px 70px rgba(0, 0, 0, 0.2);
            }

        .featured-image {
            height: 220px;
            background: linear-gradient(45deg, #667eea, #764ba2); /* Blue/Purple gradient */
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 2rem;
            font-size: 4.5rem;
            color: white;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            overflow: hidden;
        }

        .featured-card .model-price {
            color: var(--primary-color);
            font-size: 2.2rem;
            margin-bottom: 1.2rem;
            font-weight: 700;
        }

        .featured-card .model-title {
            color: var(--text-dark);
            font-size: 2.2rem;
            margin-bottom: 1.2rem;
            font-family: 'Playfair Display', serif;
        }

        .featured-card .model-description {
            color: #666;
            font-size: 1.1rem;
            line-height: 1.7;
            flex-grow: 1;
        }

        .featured-card .read-more {
            background: linear-gradient(45deg, var(--accent-color-2), var(--primary-color));
            box-shadow: 0 10px 25px rgba(52, 172, 224, 0.3);
        }

            .featured-card .read-more:hover {
                box-shadow: 0 15px 35px rgba(52, 172, 224, 0.5);
            }

        /* Testimonials */
        .testimonials {
            background: var(--gradient-hero);
            color: var(--text-light);
        }

            .testimonials .section-title {
                background: linear-gradient(45deg, var(--accent-color-1), var(--accent-color-2));
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

        .testimonial-card {
            max-width: 1000px;
            margin: 6rem auto 0;
            background: rgba(255, 255, 255, 0.18);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.25);
            border-radius: 30px;
            padding: 5rem;
            text-align: center;
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.4);
            position: relative;
            overflow: hidden;
            transform: perspective(1000px) rotateX(0deg);
            transition: all 0.7s ease;
        }

            .testimonial-card:hover {
                transform: perspective(1000px) rotateX(3deg) translateY(-10px);
                box-shadow: 0 30px 60px rgba(0, 0, 0, 0.5);
            }

            .testimonial-card::before {
                content: '\201C';
                font-family: serif;
                font-size: 12rem;
                color: rgba(255, 255, 255, 0.15);
                position: absolute;
                top: 10px;
                left: 20px;
                z-index: 0;
                pointer-events: none;
            }

            .testimonial-card::after {
                content: '\201D';
                font-family: serif;
                font-size: 12rem;
                color: rgba(255, 255, 255, 0.15);
                position: absolute;
                bottom: -30px;
                right: 20px;
                z-index: 0;
                pointer-events: none;
            }

        .testimonial-text {
            font-size: 1.5rem;
            line-height: 2;
            margin-bottom: 3rem;
            font-style: italic;
            position: relative;
            z-index: 1;
            text-shadow: 0 1px 5px rgba(0, 0, 0, 0.2);
        }

        .testimonial-author {
            font-size: 1.4rem;
            font-weight: 700;
            color: var(--accent-color-1);
            text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
            position: relative;
            z-index: 1;
        }

        /* Contact Section */
        .contact {
            background: linear-gradient(135deg, #f0f2f5 0%, #e9eef2 100%);
        }

            .contact .section-title {
                background: var(--gradient-main);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

            .contact .section-subtitle {
                color: #666;
            }

        .contact-content {
            display: grid;
            grid-template-columns: 1fr 1.3fr;
            gap: 5rem;
            margin-top: 6rem;
            align-items: flex-start;
        }

        .contact-form,
        .contact-info {
            background: var(--card-bg);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(220, 220, 220, 0.8);
            border-radius: 30px;
            padding: 5rem;
            box-shadow: var(--shadow-strong);
            transition: all 0.5s ease;
            border-top: 8px solid var(--accent-color-2);
        }

            .contact-form:hover,
            .contact-info:hover {
                transform: translateY(-8px);
                box-shadow: 0 35px 70px rgba(0, 0, 0, 0.2);
            }

        .form-group {
            margin-bottom: 2rem;
        }

            .form-group input,
            .form-group textarea {
                width: 100%;
                padding: 1.3rem;
                border: 1px solid #ddd;
                border-radius: 15px;
                background: #fdfdfd;
                font-size: 1.15rem;
                transition: all 0.3s ease;
                color: #333;
                box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.05);
            }

                .form-group input::placeholder,
                .form-group textarea::placeholder {
                    color: #999;
                }

                .form-group input:focus,
                .form-group textarea:focus {
                    outline: none;
                    border-color: var(--primary-color);
                    box-shadow: 0 0 20px rgba(106, 5, 114, 0.2);
                }

        .submit-btn {
            width: 100%;
            padding: 1.4rem;
            background: var(--gradient-main);
            color: white;
            border: none;
            border-radius: 15px;
            font-size: 1.3rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.4s ease;
            letter-spacing: 1px;
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2);
        }

            .submit-btn:hover {
                transform: translateY(-5px) scale(1.01);
                box-shadow: 0 18px 45px rgba(0, 0, 0, 0.3);
                background: linear-gradient(45deg, var(--secondary-color), var(--primary-color));
            }

        .contact-info h3 {
            margin-bottom: 2.8rem;
            font-size: 2.5rem;
            font-family: 'Playfair Display', serif;
            color: var(--primary-color);
            position: relative;
        }

            .contact-info h3::after {
                content: '';
                position: absolute;
                left: 0;
