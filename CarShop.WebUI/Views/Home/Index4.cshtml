@{
    ViewData["Title"] = "Index4";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OBerlo - Premium Car Showroom</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700;800&family=Oswald:wght@400;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-gradient: linear-gradient(45deg, #0f2027, #203a43, #2c5364); /* Dark blue/grey gradient */
            --secondary-gradient: linear-gradient(45deg, #FFD700, #FFA500); /* Gold/Orange gradient for accents */
            --text-color-light: #f4f4f4;
            --text-color-dark: #333;
            --card-bg-light: rgba(255, 255, 255, 0.1);
            --card-bg-dark: rgba(255, 255, 255, 0.95);
            --border-color-light: rgba(255, 255, 255, 0.2);
            --shadow-light: 0 15px 30px rgba(0, 0, 0, 0.2);
            --shadow-dark: 0 20px 40px rgba(0, 0, 0, 0.15);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            line-height: 1.6;
            color: var(--text-color-dark);
            overflow-x: hidden;
            background-color: #f0f2f5;
        }

        /* Header & Navigation */
        .header {
            position: fixed;
            top: 0;
            width: 100%;
            background: rgba(0, 0, 0, 0.9);
            backdrop-filter: blur(15px);
            z-index: 1000;
            transition: all 0.4s ease;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
        }

        .nav-container {
            max-width: 1300px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 2.5rem;
        }

        .logo {
            font-family: 'Oswald', sans-serif;
            font-size: 2.5rem;
            font-weight: 700;
            color: #fff;
            text-decoration: none;
            background: var(--secondary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
        }

        .nav-menu {
            display: flex;
            list-style: none;
            gap: 2.5rem;
        }

        .nav-link {
            color: #fff;
            text-decoration: none;
            padding: 0.7rem 1.4rem;
            border-radius: 50px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            font-weight: 600;
            letter-spacing: 0.5px;
        }

        .nav-link::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.6s cubic-bezier(0.2, 0.8, 0.2, 1);
        }

        .nav-link:hover::before {
            left: 100%;
        }

        .nav-link:hover,
        .nav-link.active {
            background: var(--secondary-gradient);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(255, 165, 0, 0.4);
        }

        /* Hero Section */
        .hero {
            height: 100vh;
            background: var(--primary-gradient);
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><defs><radialGradient id="a" cx="50%" cy="50%"><stop offset="0%" style="stop-color:rgba(255,255,255,0.15)"/><stop offset="100%" style="stop-color:rgba(255,255,255,0)"/></radialGradient></defs><circle cx="200" cy="200" r="100" fill="url(%23a)"/><circle cx="800" cy="300" r="150" fill="url(%23a)"/><circle cx="400" cy="700" r="120" fill="url(%23a)"/><circle cx="650" cy="150" r="80" fill="url(%23a)"/></svg>') no-repeat center;
            background-size: cover;
            opacity: 0.4;
            transform: scale(1.2);
            animation: heroBackgroundZoom 20s infinite alternate ease-in-out;
        }

        .hero-content {
            position: relative;
            z-index: 2;
            color: var(--text-color-light);
            max-width: 900px;
            padding: 3rem;
        }

        .hero h1 {
            font-family: 'Oswald', sans-serif;
            font-size: 5rem;
            font-weight: 800;
            margin-bottom: 1.5rem;
            text-shadow: 0 6px 25px rgba(0, 0, 0, 0.4);
            animation: fadeInUp 1s ease-out;
            line-height: 1.1;
        }

        .hero p {
            font-size: 1.5rem;
            margin-bottom: 3rem;
            opacity: 0.9;
            animation: fadeInUp 1s ease-out 0.3s both;
        }

        .cta-button {
            display: inline-block;
            padding: 1.2rem 3rem;
            background: var(--secondary-gradient);
            color: white;
            text-decoration: none;
            border-radius: 50px;
            font-weight: 700;
            font-size: 1.2rem;
            transition: all 0.4s ease;
            box-shadow: 0 12px 35px rgba(255, 165, 0, 0.3);
            animation: fadeInUp 1s ease-out 0.6s both;
            border: none;
            cursor: pointer;
            letter-spacing: 1px;
        }

        .cta-button:hover {
            transform: translateY(-5px) scale(1.02);
            box-shadow: 0 18px 45px rgba(255, 165, 0, 0.5);
        }

        /* General Sections */
        .section-padding {
            padding: 8rem 2.5rem;
        }

        .container {
            max-width: 1300px;
            margin: 0 auto;
        }

        .section-title {
            text-align: center;
            font-family: 'Oswald', sans-serif;
            font-size: 3.8rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        }

        .section-subtitle {
            text-align: center;
            font-size: 1.4rem;
            color: #666;
            margin-bottom: 5rem;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
            line-height: 1.6;
        }

        /* About Section */
        .about {
            background: linear-gradient(135deg, #e0e5ec 0%, #f9f9f9 100%);
            position: relative;
            overflow: hidden;
        }

        .about-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 5rem;
            align-items: center;
        }

        .about-text {
            background: var(--card-bg-dark);
            padding: 4rem;
            border-radius: 25px;
            border: 1px solid rgba(220, 220, 220, 0.8);
            box-shadow: var(--shadow-dark);
            transform: perspective(1000px) rotateY(0deg);
            transition: all 0.6s cubic-bezier(0.2, 0.8, 0.2, 1);
        }

        .about-text:hover {
            transform: perspective(1000px) rotateY(3deg) translateY(-5px);
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.2);
        }

        .about-text h3 {
            font-size: 2.5rem;
            margin-bottom: 1.5rem;
            color: #333;
            font-family: 'Oswald', sans-serif;
        }

        .about-text p {
            margin-bottom: 1.8rem;
            font-size: 1.1rem;
            color: #555;
            line-height: 1.7;
        }

        .about-image {
            height: 450px;
            background: var(--primary-gradient);
            border-radius: 25px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 6rem;
            color: var(--text-color-light);
            box-shadow: var(--shadow-light);
            position: relative;
            overflow: hidden;
            transition: all 0.6s ease;
        }

        .about-image::after {
            content: '';
            position: absolute;
            width: 150%;
            height: 150%;
            background: rgba(255, 255, 255, 0.05);
            transform: rotate(30deg);
            animation: shine 4s infinite ease-out;
            opacity: 0;
        }

        .about-image:hover::after {
            opacity: 1;
        }

        .about-image i {
            animation: float 4s ease-in-out infinite;
        }

        /* Models Section */
        .models {
            background: var(--primary-gradient);
            color: var(--text-color-light);
        }

        .models .section-title,
        .models .section-subtitle {
            background: var(--secondary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-shadow: none;
        }

        .models-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
            gap: 3rem;
            margin-top: 5rem;
        }

        .model-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid var(--border-color-light);
            border-radius: 25px;
            padding: 2.5rem;
            transition: all 0.4s ease-in-out;
            position: relative;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .model-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 6px;
            background: var(--secondary-gradient);
        }

        .model-card:hover {
            transform: translateY(-15px) scale(1.03);
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.4);
            background: rgba(255, 255, 255, 0.15);
            border-color: rgba(255, 215, 0, 0.5);
        }

        .model-image {
            height: 220px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 2rem;
            font-size: 4.5rem;
            color: rgba(255, 215, 0, 0.8);
            border: 1px dashed rgba(255, 215, 0, 0.3);
            overflow: hidden;
        }

        .model-image i {
            animation: zoomIn 1s ease-out;
        }

        .model-title {
            font-family: 'Oswald', sans-serif;
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 1.2rem;
            color: var(--text-color-light);
            letter-spacing: 0.8px;
        }

        .model-price {
            font-size: 2.2rem;
            font-weight: 800;
            color: #FFD700;
            margin-bottom: 1.5rem;
            text-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
        }

        .model-description {
            margin-bottom: 2rem;
            opacity: 0.9;
            line-height: 1.7;
            flex-grow: 1; /* Allow description to take available space */
        }

        .read-more {
            display: inline-block;
            padding: 1rem 2rem;
            background: var(--secondary-gradient);
            color: white;
            text-decoration: none;
            border-radius: 30px;
            font-weight: 600;
            transition: all 0.3s ease;
            align-self: flex-start; /* Align button to start of flex item */
            box-shadow: 0 8px 20px rgba(255, 165, 0, 0.3);
        }

        .read-more:hover {
            transform: translateY(-3px) scale(1.02);
            box-shadow: 0 12px 30px rgba(255, 165, 0, 0.5);
        }

        /* Stats Section */
        .stats {
            background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%); /* Gold to Orange */
            color: white;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 2.5rem;
        }

        .stat-card {
            text-align: center;
            background: rgba(0, 0, 0, 0.15);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 20px;
            padding: 3.5rem 2.5rem;
            transition: all 0.3s ease;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

        .stat-card:hover {
            transform: translateY(-8px) scale(1.02);
            background: rgba(0, 0, 0, 0.25);
            box-shadow: 0 20px 45px rgba(0, 0, 0, 0.4);
        }

        .stat-number {
            font-family: 'Oswald', sans-serif;
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 0.8rem;
            color: #fff;
            text-shadow: 0 3px 10px rgba(0, 0, 0, 0.3);
        }

        .stat-label {
            font-size: 1.3rem;
            opacity: 0.95;
            font-weight: 600;
        }

        /* Featured Vehicles (Renamed from price, but serves similar purpose) */
        .featured {
            background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
        }

        .featured .section-title {
            background: linear-gradient(45deg, #2c5364, #0f2027);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .featured .section-subtitle {
            color: #555;
        }

        .featured-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 2.5rem;
            margin-top: 4rem;
        }

        .featured-card {
            background: var(--card-bg-dark);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 2.5rem;
            box-shadow: var(--shadow-dark);
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .featured-card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.25);
        }

        .featured-image {
            height: 200px;
            background: linear-gradient(45deg, #667eea, #764ba2); /* Blue/Purple gradient */
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.8rem;
            font-size: 4rem;
            color: white;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        .featured-card .model-price {
            color: #764ba2; /* Consistent with featured-image gradient */
            font-size: 1.9rem;
            margin-bottom: 1rem;
        }

        .featured-card .model-title {
            color: #333;
            font-size: 1.8rem;
            margin-bottom: 1rem;
        }

        .featured-card .model-description {
            color: #666;
            font-size: 1.05rem;
            line-height: 1.6;
            flex-grow: 1;
        }

        .featured-card .read-more {
            background: linear-gradient(45deg, #667eea, #764ba2);
            box-shadow: 0 8px 20px rgba(118, 75, 162, 0.3);
        }

        .featured-card .read-more:hover {
            box-shadow: 0 12px 30px rgba(118, 75, 162, 0.5);
        }

        /* Testimonials */
        .testimonials {
            background: var(--primary-gradient);
            color: var(--text-color-light);
        }

        .testimonials .section-title {
            background: var(--secondary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .testimonial-card {
            max-width: 900px;
            margin: 5rem auto 0;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            border: 1px solid var(--border-color-light);
            border-radius: 25px;
            padding: 4rem;
            text-align: center;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
            position: relative;
            overflow: hidden;
        }

        .testimonial-card::before {
            content: '\201C'; /* Left double quotation mark */
            font-family: serif;
            font-size: 10rem;
            color: rgba(255, 255, 255, 0.1);
            position: absolute;
            top: 20px;
            left: 20px;
            z-index: 0;
            pointer-events: none;
        }

        .testimonial-card::after {
            content: '\201D'; /* Right double quotation mark */
            font-family: serif;
            font-size: 10rem;
            color: rgba(255, 255, 255, 0.1);
            position: absolute;
            bottom: -30px;
            right: 20px;
            z-index: 0;
            pointer-events: none;
        }

        .testimonial-text {
            font-size: 1.4rem;
            line-height: 1.9;
            margin-bottom: 2.5rem;
            font-style: italic;
            position: relative;
            z-index: 1;
        }

        .testimonial-author {
            font-size: 1.3rem;
            font-weight: 700;
            color: #FFD700;
            text-shadow: 0 1px 5px rgba(0, 0, 0, 0.2);
            position: relative;
            z-index: 1;
        }

        /* Contact Section */
        .contact {
            background: linear-gradient(135deg, #e0e5ec 0%, #f9f9f9 100%);
        }

        .contact .section-title {
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .contact .section-subtitle {
            color: #666;
        }

        .contact-content {
            display: grid;
            grid-template-columns: 1fr 1.2fr; /* Info takes less space */
            gap: 4rem;
            margin-top: 5rem;
            align-items: flex-start;
        }

        .contact-form,
        .contact-info {
            background: var(--card-bg-dark);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(220, 220, 220, 0.8);
            border-radius: 25px;
            padding: 4rem;
            box-shadow: var(--shadow-dark);
            transition: all 0.4s ease;
        }

        .contact-form:hover,
        .contact-info:hover {
            transform: translateY(-5px);
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.2);
        }

        .form-group {
            margin-bottom: 1.8rem;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 1.2rem;
            border: 1px solid #ddd;
            border-radius: 12px;
            background: #f9f9f9;
            font-size: 1.05rem;
            transition: all 0.3s ease;
            color: #333;
        }

        .form-group input::placeholder,
        .form-group textarea::placeholder {
            color: #999;
        }

        .form-group input:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: #764ba2;
            box-shadow: 0 0 15px rgba(118, 75, 162, 0.2);
        }

        .submit-btn {
            width: 100%;
            padding: 1.2rem;
            background: var(--primary-gradient);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 1.2rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            letter-spacing: 1px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }

        .submit-btn:hover {
            transform: translateY(-3px) scale(1.01);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
            background: linear-gradient(45deg, #2c5364, #4a778c);
        }

        .contact-info h3 {
            margin-bottom: 2.5rem;
            font-size: 2rem;
            font-family: 'Oswald', sans-serif;
            color: #333;
        }

        .contact-item {
            display: flex;
            align-items: flex-start;
            margin-bottom: 2.2rem;
            font-size: 1.15rem;
            color: #555;
        }

        .contact-item i {
            margin-right: 1.2rem;
            font-size: 1.8rem;
            color: #764ba2;
            min-width: 30px; /* Ensure icon alignment */
            text-align: center;
            padding-top: 3px;
        }

        /* Footer */
        .footer {
            background: #111;
            color: white;
            text-align: center;
            padding: 3rem;
            border-top: 5px solid var(--secondary-gradient);
        }

        .social-links {
            margin-bottom: 1.5rem;
        }

        .social-links a {
            color: white;
            font-size: 1.8rem;
            margin: 0 1.2rem;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .social-links a:hover {
            color: #FFD700;
            transform: translateY(-5px) scale(1.1);
        }

        .footer p {
            font-size: 1rem;
            opacity: 0.8;
            letter-spacing: 0.5px;
        }

        /* Animations */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(40px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-15px) rotate(3deg); }
        }

        @@keyframes shine {
            0% { transform: rotate(30deg) translate(-100%, -100%); opacity: 0; }
            10% { opacity: 1; }
            80% { opacity: 1; }
            100% { transform: rotate(30deg) translate(100%, 100%); opacity: 0; }
        }

        @@keyframes zoomIn {
            from {
                opacity: 0;
                transform: scale(0.8);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        @@keyframes heroBackgroundZoom {
            0% { transform: scale(1.1); }
            100% { transform: scale(1.3); }
        }


        .floating {
            animation: float 6s ease-in-out infinite;
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .nav-menu {
                gap: 1.5rem;
            }
            .hero h1 {
                font-size: 3.5rem;
            }
            .hero p {
                font-size: 1.2rem;
            }
            .section-title {
                font-size: 3rem;
            }
            .section-subtitle {
                font-size: 1.1rem;
                margin-bottom: 3rem;
            }
            .about-content,
            .contact-content {
                grid-template-columns: 1fr;
                gap: 3rem;
            }
            .about-image {
                height: 350px;
                font-size: 5rem;
            }
            .about-text, .contact-form, .contact-info {
                padding: 3rem;
            }
            .models-grid, .featured-grid, .stats-grid {
                grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            }
            .model-card, .featured-card {
                padding: 2rem;
            }
            .testimonial-card {
                padding: 3rem;
            }
        }

        @@media (max-width: 768px) {
            .nav-menu {
                display: none; /* For a real site, implement a mobile menu toggle */
            }
            .nav-container {
                padding: 0.8rem 1.5rem;
            }
            .logo {
                font-size: 2rem;
            }
            .hero h1 {
                font-size: 2.8rem;
            }
            .hero p {
                font-size: 1rem;
            }
            .cta-button {
                padding: 1rem 2rem;
                font-size: 1rem;
            }
            .section-padding {
                padding: 5rem 1.5rem;
            }
            .section-title {
                font-size: 2.5rem;
            }
            .section-subtitle {
