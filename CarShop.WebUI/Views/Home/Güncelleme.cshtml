@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<header class="header">
    <div>
        <h2>Ürün Güncelle</h2>
        <p style="color: rgba(255, 255, 255, 0.7); margin-top: 0.5rem;">Mevcut ürün bilgilerini güncelleyin.</p>
    </div>
</header>

<div class="form-card">
    <form>
        <div class="mb-3">
            <label for="productName" class="form-label">Ürün Adı</label>
            <input type="text" class="form-control" id="productName" value="Telefon X Pro" required>
        </div>
        <div class="mb-3">
            <label for="productBrand" class="form-label">Marka</label>
            <input type="text" class="form-control" id="productBrand" value="Samsung" required>
        </div>
        <div class="mb-3">
            <label for="productPrice" class="form-label">Fiyat (₺)</label>
            <input type="number" class="form-control" id="productPrice" value="15000.00" step="0.01" required>
        </div>
        <div class="mb-3">
            <label for="productStock" class="form-label">Stok Adedi</label>
            <input type="number" class="form-control" id="productStock" value="20" required>
        </div>
        <div class="mb-4">
            <label for="productDescription" class="form-label">Açıklama</label>
            <textarea class="form-control" id="productDescription" rows="3">Yüksek performanslı, yeni nesil akıllı telefon. Gelişmiş kamera özellikleri ve uzun pil ömrü ile dikkat çekiyor.</textarea>
        </div>
        <div class="d-flex justify-content-end">
            <a href="urunler.html" class="btn btn-secondary me-2">İptal</a>
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </div>
    </form>
</div>

