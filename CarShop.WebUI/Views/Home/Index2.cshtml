        </nav>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Header -->
            <header class="header">
                <div>
                    <h2>Dashboard Genel Bakış</h2>
                    <p style="color: rgba(255, 255, 255, 0.7); margin-top: 0.5rem;">Hoş geldiniz! İşte güncel istatistikleriniz.</p>
                </div>
                <div class="user-info">
