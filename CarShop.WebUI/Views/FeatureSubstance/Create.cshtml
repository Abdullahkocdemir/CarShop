@model CreateFeatureSubstancesDTO
@{
    ViewData["Title"] = "Yeni Özellik Maddesi Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="header">
    <div>
        <h2>Yeni Özellik Maddesi Ekle</h2>
        <p style="color: rgba(255, 255, 255, 0.7); margin-top: 0.5rem;">Yeni bir özellik maddesi girişi yapın.</p>
    </div>
    <div class="user-info">
        <div class="user-avatar">AK</div>
        <div>
            <div>Admin Kullanıcı</div>
            <div style="font-size: 0.8rem; opacity: 0.7;">admin@example.com</div>
        </div>
    </div>
</header>

<div class="form-card">
    <form asp-controller="FeatureSubstance" asp-action="Create" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label for="Subject" class="form-label">Konu</label>
            <input type="text" asp-for="Subject" class="form-control" id="Subject" placeholder="Konuyu girin" required>
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="ImageFile" class="form-label">Resim Seçin</label>
            <input type="file" asp-for="ImageFile" class="form-control" id="ImageFile" accept="image/*" required>
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end">
            <a href="/FeatureSubstance/Index" class="btn btn-secondary me-2">İptal</a>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </form>
</div>