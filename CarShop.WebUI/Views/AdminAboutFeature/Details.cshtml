@model GetByIdAboutFeatureDTO

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="header">
    <div>
        <h2>Hakkımızda Özellik Detayı</h2>
        <p style="color: rgba(255, 255, 255, 0.7); margin-top: 0.5rem;">Özelliğe ait detaylı bilgilere buradan ulaşabilirsiniz.</p>
    </div>
</header>

<div class="detail-card shadow">
    <h4 class="mb-4">@Model.Title Detayları</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="detail-item text-center mb-4">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded" style="max-width: 300px; max-height: 300px; object-fit: cover;" />
                }
                else
                {
                    <img src="/images/default.png" alt="Varsayılan Resim" class="img-fluid rounded" style="max-width: 300px; max-height: 300px; object-fit: cover;" />
                }
            </div>
            <div class="detail-item">
                <i class="fas fa-id-badge"></i> <strong>Özellik ID:</strong> <span>@Model.AboutFeatureId</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-heading"></i> <strong>Başlık:</strong> <span>@Model.Title</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-align-left"></i> <strong>Açıklama:</strong> <span>@Model.Description</span>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end mt-4">
        <a asp-action="Index" class="btn btn-secondary me-2">
            <i class="fas fa-arrow-left"></i> Özelliklere Geri Dön
        </a>
    </div>
</div>