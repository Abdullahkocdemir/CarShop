@model DTOsLayer.WebUIDTO.BlogDTO.GetByIdBlogDTO

@{
    Layout = null; 

}
<!DOCTYPE html>
<html lang="zxx">

<head>
    @await Component.InvokeAsync("_DefaultLayoutHeadPartials")
    <style>
        .blog-details-hero {
            position: relative;
            padding: 100px 0; 
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            color: #fff; 
        }

        .blog-details-bg {
            background-image: url('/hvac-master/img/blog/details/details-hero-bg.jpg');
        }

    </style>
</head>

<body>
    @await Component.InvokeAsync("DefaultLayoutHeaderPartials")

    <section class="blog-details-hero spad blog-details-bg">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-10">
                    <div class="blog__details__hero__text">
                        <span class="label">Araba Marketim</span>
                        <h2>@Model.Title</h2> 
                        <ul>
                            <li>
                                <img src="~/hvac-master/img/blog/details/default-details-hero-avatar.png" alt=""> 
                            </li>
                            <li><i class="fa fa-calendar-o"></i> <span>@Model.Date.ToString("MMM dd, yyyy")</span></li> 
                            <li><i class="fa fa-edit"></i> <span>@Model.CommentCount Yorum</span></li> 
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <br>
    <br>
    <br>
    <br>
    <br>

    <section class="blog-details spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="blog__details__pic">
                        <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/img/blog/details/default-details-pic.jpg" : Model.ImageUrl)" alt="@Model.Title"> 
                    </div>
                </div>
            </div>
            <div class="row d-flex justify-content-center">
                <div class="col-lg-8">
                    <div class="blog__details__text">
                        <p>@Html.Raw(Model.Description)</p> 
                    </div>
                </div>
            </div>

        </div>
    </section>

    @await Component.InvokeAsync("DefaultLayoutFooterPartials")

    @await Component.InvokeAsync("DefaultLayoutScriptPartials")

</body>

</html>