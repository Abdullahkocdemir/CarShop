@model CarShop.WebUI.Models.CreateRoleViewModel
@{
    ViewData["Title"] = "Yeni Rol Oluştur";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // Admin layout'unuzun yolunu kontrol edin
}

<div class="container-fluid mt-4">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Yeni Rol Oluştur</h3>
        </div>
        <div class="card-body">
            <form asp-action="CreateRole" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success">Oluştur</button>
                    <a asp-action="RoleList" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>