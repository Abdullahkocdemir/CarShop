@model GetByIdCallBackTitleDTO
@{
    ViewData["Title"] = "Geri Arama Başlık Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="header">
    <div>
        <h2>Geri Arama Başlık Detayı</h2>
        <p style="color: rgba(255, 255, 255, 0.7); margin-top: 0.5rem;">Geri arama başlığına ait detaylı bilgilere buradan ulaşabilirsiniz.</p>
    </div>
</header>

<div class="detail-card shadow">
    <h4 class="mb-4">Geri Arama Başlığı Detayları</h4> 
    <div class="row">
        <div class="col-md-12">
            <div class="detail-item">
                <i class="fas fa-id-badge"></i> <strong>ID:</strong> <span>@Model.CallBackTitleId</span>
            </div>
            <div class="detail-item align-items-start">
                <i class="fas fa-file-alt"></i> <strong>Açıklama:</strong> <span>@Model.Description</span>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end mt-4">
        <a asp-action="Index" class="btn btn-secondary me-2">
            <i class="fas fa-arrow-left"></i> Geri Arama Başlıklarına Geri Dön
        </a>
    </div>
</div>