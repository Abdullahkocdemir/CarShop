@model DTOsLayer.WebUIDTO.ServiceDTO.GetByIdServiceDTO

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="header">
    <div>
        <h2>Hizmet Detayı</h2>
        <p style="color: rgba(255, 255, 255, 0.7); margin-top: 0.5rem;">Hizmete ait detaylı bilgilere buradan ulaşabilirsiniz.</p>
    </div>
</header>

<div class="detail-card shadow">
    <h4 class="mb-4">@Model.Title Detayları</h4>
    <div class="row">
        <div class="col-md-6">
            <div class="detail-item">
                <i class="fas fa-id-badge"></i> <strong>Hizmet ID:</strong> <span>@Model.ServiceId</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-heading"></i> <strong>Başlık:</strong> <span>@Model.Title</span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="detail-item">
                <i class="fas fa-align-left"></i> <strong>Açıklama:</strong> <span>@Model.Description</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-image"></i> <strong>Resim:</strong>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Hizmet Resmi" style="width: 200px; height: auto; border-radius: 5px; margin-top: 5px; border: 1px solid #ddd;" />
                }
                else
                {
                    <span>Resim Yok</span>
                }
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end mt-4">
        <a asp-action="Index" class="btn btn-secondary me-2">
            <i class="fas fa-arrow-left"></i> Hizmetlere Geri Dön
        </a>
    </div>
</div>