@model GetByIdWhyUseDTO
@{
    ViewData["Title"] = "WhyUse Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="header">
    <div>
        <h2>WhyUse Detayı</h2>
        <p style="color: rgba(255, 255, 255, 0.7); margin-top: 0.5rem;">"Neden Biz?" içeriğine ait detaylı bilgilere buradan ulaşabilirsiniz.</p>
    </div>
</header>

<div class="detail-card shadow">
    <h4 class="mb-4">@Model.MainTitle Detayları</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="detail-item">
                <i class="fas fa-id-badge"></i> <strong>ID:</strong> <span>@Model.WhyUseId</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-heading"></i> <strong>Ana Başlık:</strong> <span>@Model.MainTitle</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-file-alt"></i> <strong>Ana Açıklama:</strong> <span>@Model.MainDescription</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-video"></i> <strong>Video URL:</strong>
                <span>
                    @if (!string.IsNullOrEmpty(Model.VideoUrl))
                    {
                        <a href="@Model.VideoUrl" target="_blank">@Model.VideoUrl</a>
                    }
                    else
                    {
                        <span>Yok</span>
                    }
                </span>
            </div>
        </div>
    </div>

    <h5 class="mt-4 mb-3">Alt Öğeler (WhyUse Items)</h5>
    @if (Model.Items != null && Model.Items.Any())
    {
        <ul class="list-group list-group-flush">
            @foreach (var item in Model.Items)
            {
                <li class="list-group-item">
                    <i class="fas fa-caret-right"></i> @item.Content
                </li>
            }
        </ul>
    }
    else
    {
        <p>Henüz tanımlanmış bir alt öğe bulunmamaktadır.</p>
    }

    <div class="d-flex justify-content-end mt-4">
        <a asp-action="Index" class="btn btn-secondary me-2">
            <i class="fas fa-arrow-left"></i> WhyUse Listesine Geri Dön
        </a>
    </div>
</div>