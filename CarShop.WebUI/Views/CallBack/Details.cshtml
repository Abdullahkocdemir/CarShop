@model GetByIdCallBackDTO
@{
    ViewData["Title"] = "Geri Arama İsteği Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="header">
    <div>
        <h2>Geri Arama İsteği Detayı</h2>
        <p style="color: rgba(255, 255, 255, 0.7); margin-top: 0.5rem;">Geri arama isteğine ait detaylı bilgilere buradan ulaşabilirsiniz.</p>
    </div>
</header>

<div class="detail-card shadow">
    <h4 class="mb-4">@Model.NameSurname - Geri Arama İsteği Detayları</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="detail-item">
                <i class="fas fa-id-badge"></i> <strong>ID:</strong> <span>@Model.CallBackId</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-user"></i> <strong>Ad Soyad:</strong> <span>@Model.NameSurname</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-envelope"></i> <strong>E-posta:</strong> <span>@Model.Email</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-phone"></i> <strong>Telefon Numarası:</strong> <span>@Model.PhoneNumber</span>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end mt-4">
        <a asp-action="Index" class="btn btn-secondary me-2">
            <i class="fas fa-arrow-left"></i> Geri Arama İsteklerine Geri Dön
        </a>
    </div>
</div>