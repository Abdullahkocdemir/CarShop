@model List<DTOsLayer.WebUIDTO.WhyUseDTO.ResultWhyUseDTO>
<section class="chooseus spad">
    @foreach (var item in Model)
    {
        <div class="container">
            <div class="row">
                <div class="col-lg-5">
                    <div class="chooseus__text">
                        <div class="section-title">
                            <h2>@item.MainTitle</h2>
                            <p>
                                @item.MainDescription
                            </p>
                        </div>
                        <ul>
                            @foreach (var subItem in item.Items)
                            {
                                <li>
                                    <i class="fa fa-check-circle"></i> @subItem.Content
                                </li>
                            }
                        </ul>
                        <a href="/About/Index/" class="primary-btn">Hakkımızda</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="chooseus__video set-bg">
            <img src="~/hvac-master/img/chooseus-video.png" alt="">
            <a href="@item.VideoUrl"
               class="play-btn video-popup"><i class="fa fa-play"></i></a>
        </div>
    }
</section>