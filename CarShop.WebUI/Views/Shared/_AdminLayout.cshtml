@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modern Admin Dashboard - Ürünler</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/Table.css" rel="stylesheet" />
    <link href="~/css/admin-dashboard.css" rel="stylesheet" />
    <link href="~/css/SidebarDropdown.css" rel="stylesheet" /> 
</head>
<body>
    <div class="dashboard">
        <nav class="sidebar">
            <div class="logo">
                <h1><i class="fas fa-user-shield"></i> <br />CarShop Admin</h1>
            </div>
            <ul class="nav-menu">
                <li class="nav-item">
                    <a href="index.html" class="nav-link">
                        <i class="fas fa-arrow-alt-circle-right"></i>
                        <span>Siteye Git</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Banner/Index/" class="nav-link">
                        <i class="fas fa-image"></i>
                        <span>Afiş</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Brand/Index/" class="nav-link">
                        <i class="fas fa-registered"></i>
                        <span>Markalar</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link collapsed" href="#productSubmenu" data-bs-toggle="collapse" aria-expanded="false" aria-controls="productSubmenu">
                        <i class="fas fa-box-open"></i>
                        <span>Ürünler <i class="fas fa-chevron-down submenu-arrow"></i></span> 
                    </a>
                    <div class="collapse submenu" id="productSubmenu">
                        <ul class="nav-menu-sub">
                            <li><a class="nav-link-sub" href="/Product/Index/">Tüm Ürünler</a></li>
                            <li><a class="nav-link-sub" href="/Product/AddProduct/">Yeni Ürün Ekle</a></li>
                            <li><a class="nav-link-sub" href="/Category/Index/">Kategoriler</a></li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <a href="/Service/Index/" class="nav-link">
                        <i class="fas fa-concierge-bell"></i>
                        <span>Hizmetler</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/About/Index/" class="nav-link">
                        <i class="fas fa-info-circle"></i>
                        <span>Hakkımızda alanları</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Partner/Index/" class="nav-link">
                        <i class="fas fa-users"></i>
                        <span>Müşteriler</span>

                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Staff/Index/" class="nav-link">
                        <i class="fas fa-user-tie"></i>
                        <span>Çalışanlar</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Testimonial/Index/" class="nav-link">
                        <i class="fas fa-handshake"></i>
                        <span>Referanslar</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/WhyUse/Index/" class="nav-link">
                        <i class="fas fa-question-circle"></i>
                        <span>Biz Kimiz</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Blog/Index/" class="nav-link">
                        <i class="fas fa-blog"></i>
                        <span>Blog</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Settings/Index/" class="nav-link">
                        <i class="fas fa-cogs"></i>
                        <span>Ayarlar</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Settings/Logout/" class="nav-link">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Çıkış Yap</span>
                    </a>
                </li>
            </ul>
        </nav>
        <main class="main-content">
            @RenderBody()
        </main>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
    <script>
        document.querySelectorAll('.nav-menu > .nav-item > .nav-link:not(.collapsed)').forEach(link => {
            link.addEventListener('click', function (e) {
                document.querySelectorAll('.nav-menu > .nav-item > .nav-link').forEach(l => l.classList.remove('active'));
                this.classList.add('active');
            });
        });

        document.querySelectorAll('.nav-menu-sub .nav-link-sub').forEach(subLink => {
            subLink.addEventListener('click', function (e) {
                document.querySelectorAll('.nav-menu-sub .nav-link-sub').forEach(l => l.classList.remove('active'));
                this.classList.add('active');
                const parentCollapseLink = this.closest('.submenu').previousElementSibling;
                if (parentCollapseLink && parentCollapseLink.classList.contains('nav-link')) {
                    document.querySelectorAll('.nav-menu > .nav-item > .nav-link').forEach(l => l.classList.remove('active'));
                    parentCollapseLink.classList.add('active');
                }
            });

            if (window.location.pathname === subLink.getAttribute('href')) {
                subLink.classList.add('active');
                const parentCollapse = subLink.closest('.collapse.submenu');
                if (parentCollapse) {
                    parentCollapse.classList.add('show'); 
                    parentCollapse.previousElementSibling.classList.remove('collapsed'); 
                    parentCollapse.previousElementSibling.classList.add('active'); 
                }
            }
        });

        // Submenu okunun dönme animasyonu
        document.querySelectorAll('.nav-link.collapsed').forEach(link => {
            link.addEventListener('click', function () {
                const arrow = this.querySelector('.submenu-arrow');
                if (arrow) {
                    if (this.classList.contains('collapsed')) {
                        arrow.style.transform = 'rotate(0deg)'; 
                    } else {
                        arrow.style.transform = 'rotate(-90deg)'; 
                    }
                }
            });
        });
    </script>
</body>
</html>