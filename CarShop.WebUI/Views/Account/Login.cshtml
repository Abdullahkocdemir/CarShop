@model CarShop.WebUI.Models.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null; // Opsiyonel: Kendi layout'unuzu burada belirtebilirsiniz.
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarShop</title>
    <link href="https://unpkg.com/tailwindcss%402/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f3f4f6;
        }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen">
    <div class="w-full max-w-md p-8 space-y-6 bg-white rounded-xl shadow-lg border border-gray-200">
        <h2 class="text-3xl font-extrabold text-gray-900 text-center">Giriş Yap</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
                <strong class="font-bold">Başarılı!</strong>
                <span class="block sm:inline">@TempData["SuccessMessage"]</span>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                <strong class="font-bold">Hata!</strong>
                <span class="block sm:inline">@TempData["ErrorMessage"]</span>
            </div>
        }

        <div asp-validation-summary="All" class="text-red-600 text-sm mb-4 p-2 bg-red-50 rounded-md border border-red-200"></div>

        <form asp-action="Login" method="post" class="space-y-4">
            <div>
                <label asp-for="UserName" class="block text-sm font-medium text-gray-700">E-posta</label>
                <input asp-for="UserName" type="text" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="E-posta adresinizi girin" />
                <span asp-validation-for="UserName" class="text-red-500 text-xs mt-1"></span>
            </div>
            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700">Şifre</label>
                <input asp-for="Password" type="password" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="Şifrenizi girin" />
                <span asp-validation-for="Password" class="text-red-500 text-xs mt-1"></span>
            </div>
            <div>
                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out">
                    Giriş Yap
                </button>
            </div>
        </form>
        <div class="text-center text-sm text-gray-600 mt-4">
            Hesabınız yok mu? <a asp-action="Register" class="font-medium text-indigo-600 hover:text-indigo-500">Kayıt Ol</a>
        </div>
    </div>
</body>
</html>
