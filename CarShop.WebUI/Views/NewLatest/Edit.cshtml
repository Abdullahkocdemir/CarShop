@model UpdateNewLatestDTO
@{
    ViewData["Title"] = "Haber Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="header">
    <div>
        <h2>Haber Güncelle</h2>
        <p style="color: rgba(255, 255, 255, 0.7); margin-top: 0.5rem;">Mevcut haber bilgilerini güncelleyin.</p>
    </div>
    <div class="user-info">
        <div class="user-avatar">AK</div>
        <div>
            <div>Admin Kullanıcı</div>
            <div style="font-size: 0.8rem; opacity: 0.7;">admin@example.com</div>
        </div>
    </div>
</header>

<div class="form-card">
    <form asp-controller="NewLatest" asp-action="Edit" method="post">
        @Html.AntiForgeryToken() 
        <input type="hidden" asp-for="NewLatestId" />

        <div class="mb-3">
            <label for="name" class="form-label">Ad</label>
            <input type="text" asp-for="Name" class="form-control" id="name" placeholder="Adı girin" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="title" class="form-label">Başlık</label>
            <input type="text" asp-for="Title" class="form-control" id="title" placeholder="Başlık girin" required>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Açıklama</label>
            <textarea asp-for="Description" class="form-control" id="description" rows="3" placeholder="Açıklama girin" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="comment" class="form-label">Yorum</label>
            <input type="text" asp-for="Comment" class="form-control" id="comment" placeholder="Yorum girin">
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="date" class="form-label">Tarih</label>
            <input type="date" asp-for="Date" class="form-control" id="date" required>
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end">
            <a href="/NewLatest/Index" class="btn btn-secondary me-2">İptal</a>
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </form>
</div>