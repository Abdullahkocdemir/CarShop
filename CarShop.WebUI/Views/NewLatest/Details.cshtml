@model DTOsLayer.WebUIDTO.NewLatestDTO.GetByIdNewLatestDTO

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="header">
    <div>
        <h2>Haber Detayı</h2>
        <p style="color: rgba(255, 255, 255, 0.7); margin-top: 0.5rem;">Habere ait detaylı bilgilere buradan ulaşabilirsiniz.</p>
    </div>
</header>

<div class="detail-card shadow">
    <h4 class="mb-4">@Model.Title Detayları</h4>
    <div class="row">
        <div class="col-md-6">
            <div class="detail-item">
                <i class="fas fa-id-badge"></i> <strong>Haber ID:</strong> <span>@Model.NewLatestId</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-user"></i> <strong>Ad:</strong> <span>@Model.Name</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-heading"></i> <strong>Başlık:</strong> <span>@Model.Title</span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="detail-item">
                <i class="fas fa-calendar-alt"></i> <strong>Tarih:</strong> <span>@Model.Date.ToShortDateString()</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-comment"></i> <strong>Yorum:</strong> <span>@Model.Comment</span>
            </div>
        </div>
    </div>
    <div class="mt-4">
        <div class="detail-item align-items-start">
            <i class="fas fa-align-left"></i> <strong>Açıklama:</strong> <span>@Model.Description</span>
        </div>
    </div>

    <div class="d-flex justify-content-end mt-4">
        <a asp-action="Index" class="btn btn-secondary me-2">
            <i class="fas fa-arrow-left"></i> Haberlere Geri Dön
        </a>
    </div>
</div>