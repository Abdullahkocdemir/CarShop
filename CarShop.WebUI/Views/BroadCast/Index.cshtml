@model List<ResultBroadcastDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>Tablo Örneği</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .product-table {
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .table tbody tr {
            transition: all 0.3s ease;
        }

            .table tbody tr:hover {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
                transform: scale(1.02);
                box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            }

                .table tbody tr:hover .btn {
                    transform: translateY(-2px);
                    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
                }

        .btn {
            transition: all 0.3s ease;
            border-radius: 8px;
        }

            .btn:hover {
                transform: translateY(-1px);
                box-shadow: 0 3px 10px rgba(0,0,0,0.3);
            }

        .header-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .container {
            animation: fadeInUp 0.6s ease-out;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .price-badge {
            background: linear-gradient(45deg, #28a745, #20c997);
            color: white;
            padding: 4px 8px;
            border-radius: 15px;
            font-weight: bold;
        }

        .stock-badge {
            background: linear-gradient(45deg, #fd7e14, #ffc107);
            color: white;
            padding: 4px 8px;
            border-radius: 15px;
            font-weight: bold;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="text-primary fw-bold">🛍️ Ürün Listesi</h3>
            <a href="/urun/ekle" class="btn btn-success btn-lg">✨ Yeni Ekle</a>
        </div>
        <div class="product-table">
            <table class="table table-hover table-bordered mb-0 bg-white">
                <thead class="header-gradient text-center">
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Alt Başlık</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@count</td>
                            <td class="fw-semibold"></td>
                            <td>Samsung</td>
                            <td><span class="price-badge">15.000 ₺</span></td>
                            <td><span class="stock-badge">20</span></td>
                            <td class="text-center">
                                <a href="/urun/detay/1" class="btn btn-sm btn-info me-1">👁️ Detay</a>
                                <a href="/urun/guncelle/1" class="btn btn-sm btn-warning me-1">✏️ Güncelle</a>
                                <a href="/urun/sil/1" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">🗑️ Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

