@model List<ResultBroadcastDTO>
@{
    ViewData["Title"] = "Duyuru Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="header">
    <div>
        <h2>Duyuru Listesi</h2>
    </div>
</header>

<div class="product-table-card">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-white">Mevcut Duyurular</h3>
        <a href="/BroadCast/Create" class="btn btn-new-product">
            <i class="fas fa-plus"></i> Yeni Duyuru Ekle
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered shadow">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>Küçük Başlık</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@count</td>
                        <td>@item.Title</td>
                        <td>@item.SmallTitle</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Pasif</span>
                            }
                        </td>
                        <td class="text-center">
                            <a href="/BroadCast/Details/@item.BroadcastId" class="btn btn-sm btn-info me-1">
                                <i class="fas fa-circle-info"></i> Detay
                            </a>
                            <a href="/BroadCast/Edit/@item.BroadcastId" class="btn btn-sm btn-warning me-1">
                                <i class="fas fa-pen-to-square"></i> Güncelle
                            </a>

                            <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete(@item.BroadcastId)">
                                <i class="fas fa-trash"></i> Sil
                            </button>
                        </td>
                    </tr>
                    count++;
                }
            </tbody>
        </table>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    function confirmDelete(broadcastId) {
        Swal.fire({
            title: "Emin misiniz?",
            text: "Bu duyuruyu silmek istediğinizden emin misiniz? Bu işlem geri alınamaz!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, sil!"
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/BroadCast/Delete/' + broadcastId,
                    type: 'POST',
                    success: function () {
                        Swal.fire("Silindi!", "Duyuru başarıyla silindi.", "success").then(() => {
                            location.reload();
                        });
                    },
                    error: function () {
                        Swal.fire("Hata!", "Silme işlemi başarısız oldu.", "error");
                    }
                });
            }
        });
    }
</script>