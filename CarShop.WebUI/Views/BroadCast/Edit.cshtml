@model UpdateBroadcastDTO
@{
    ViewData["Title"] = "Duyuru Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="header">
    <div>
        <h2>Duyuru Güncelle</h2>
        <p style="color: rgba(255, 255, 255, 0.7); margin-top: 0.5rem;">Mevcut duyuru bilgilerini güncelleyin.</p>
    </div>
    <div class="user-info">
        <div class="user-avatar">AK</div>
        <div>
            <div>Admin Kullanıcı</div>
            <div style="font-size: 0.8rem; opacity: 0.7;">admin@example.com</div>
        </div>
    </div>
</header>

<div class="form-card">
    <form asp-controller="BroadCast" asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="BroadcastId" />

        <div class="mb-3">
            <label for="title" class="form-label">Başlık</label>
            <input type="text" asp-for="Title" class="form-control" id="title" placeholder="Duyuru başlığını girin" required>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="smallTitle" class="form-label">Küçük Başlık</label>
            <input type="text" asp-for="SmallTitle" class="form-control" id="smallTitle" placeholder="Duyurunun küçük başlığını girin" required>
            <span asp-validation-for="SmallTitle" class="text-danger"></span>
        </div>

        <div class="mb-4 form-check">
            <input type="checkbox" asp-for="IsActive" class="form-check-input" id="isActive">
            <label class="form-check-label" for="isActive">Aktif Mi?</label>
        </div>

        <div class="d-flex justify-content-end">
            <a href="/BroadCast/Index" class="btn btn-secondary me-2">İptal</a>
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </form>
</div>