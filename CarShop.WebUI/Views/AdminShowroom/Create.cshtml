@model CreateShowroomDTO
@{
    ViewData["Title"] = "Yeni Showroom Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="header">
    <div>
        <h2>Yeni Showroom Ekle</h2>
        <p style="color: rgba(255, 255, 255, 0.7); margin-top: 0.5rem;">Yeni bir showroom girişi yapın.</p>
    </div>
    <div class="user-info">
        <div class="user-avatar">AK</div>
        <div>
            <div>Admin Kullanıcı</div>
            <div style="font-size: 0.8rem; opacity: 0.7;">admin@example.com</div>
        </div>
    </div>
</header>

<div class="form-card">
    <form asp-controller="AdminShowroom" asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label for="title" class="form-label">Başlık</label>
            <input type="text" asp-for="Title" class="form-control" id="title" placeholder="Showroom başlığını girin" required>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="address" class="form-label">Adres</label>
            <textarea asp-for="Address" class="form-control" id="address" rows="3" placeholder="Showroom adresini girin" required></textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="phoneNumber" class="form-label">Telefon Numarası</label>
            <input type="tel" asp-for="PhoneNumber" class="form-control" id="phoneNumber" placeholder="Showroom telefon numarasını girin" required>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end">
            <a href="/AdminShowroom/Index" class="btn btn-secondary me-2">İptal</a>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>
    </form>
</div>