@model GetByIdShowroomDTO

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="header">
    <div>
        <h2>Showroom Detayı</h2>
        <p style="color: rgba(255, 255, 255, 0.7); margin-top: 0.5rem;">Showroom'a ait detaylı bilgilere buradan ulaşabilirsiniz.</p>
    </div>
</header>

<div class="detail-card shadow">
    <h4 class="mb-4">@Model.Title Detayları</h4>
    <div class="row">
        <div class="col-md-6">
            <div class="detail-item">
                <i class="fas fa-id-badge"></i> <strong>Showroom ID:</strong> <span>@Model.ShowroomId</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-tag"></i> <strong>Başlık:</strong> <span>@Model.Title</span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="detail-item">
                <i class="fas fa-map-marker-alt"></i> <strong>Adres:</strong> <span>@Model.Address</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-phone"></i> <strong>Telefon Numarası:</strong> <span>@Model.PhoneNumber</span>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end mt-4">
        <a asp-action="Index" class="btn btn-secondary me-2">
            <i class="fas fa-arrow-left"></i> Showroomlara Geri Dön
        </a>
    </div>
</div>