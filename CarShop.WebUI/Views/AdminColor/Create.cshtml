@model CreateColorDTO
@{
    ViewData["Title"] = "Yeni Renk Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="header">
    <div>
        <h2>Yeni Renk Ekle</h2>
        <p style="color: rgba(255, 255, 255, 0.7); margin-top: 0.5rem;">Yeni bir renk girişi yapın.</p>
    </div>
    <div class="user-info">
        <div class="user-avatar">AK</div>
        <div>
            <div>Admin Kullanıcı</div>
            <div style="font-size: 0.8rem; opacity: 0.7;">admin@example.com</div>
        </div>
    </div>
</header>

<div class="form-card">
    <form asp-controller="AdminColor" asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label for="name" class="form-label">Renk Adı</label>
            <input type="text" asp-for="Name" class="form-control" id="name" placeholder="Renk adını girin" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end">
            <a href="/AdminColor/Index" class="btn btn-secondary me-2">İptal</a>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>
    </form>
</div>