@model GetByIdStaffDTO
@{
    ViewData["Title"] = "Personel Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="header">
    <div>
        <h2>Personel Detayı</h2>
        <p style="color: rgba(255, 255, 255, 0.7); margin-top: 0.5rem;">Personel bilgilerine ait detaylı bilgilere buradan ulaşabilirsiniz.</p>
    </div>
</header>

<div class="detail-card shadow">
    <h4 class="mb-4">@Model.Name - Personel Detayları</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="detail-item">
                <i class="fas fa-id-badge"></i> <strong>ID:</strong> <span>@Model.StaffId</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-user"></i> <strong>Adı:</strong> <span>@Model.Name</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-briefcase"></i> <strong>Görevi:</strong> <span>@Model.Duty</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-image"></i> <strong>Resim:</strong>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Personel Resmi" style="max-width: 200px; height: auto; border-radius: 5px; margin-left: 10px;">
                }
                else
                {
                    <span>Resim Yok</span>
                }
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end mt-4">
        <a asp-action="Index" class="btn btn-secondary me-2">
            <i class="fas fa-arrow-left"></i> Personellere Geri Dön
        </a>
    </div>
</div>