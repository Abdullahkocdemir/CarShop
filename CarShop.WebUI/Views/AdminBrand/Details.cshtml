@model DTOsLayer.WebUIDTO.BrandDTO.GetByIdBrandDTO

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="header">
    <div>
        <h2>Marka Detayı</h2>
        <p style="color: rgba(255, 255, 255, 0.7); margin-top: 0.5rem;">Markaya ait detaylı bilgilere buradan ulaşabilirsiniz.</p>
    </div>
</header>

<div class="detail-card shadow">
    <h4 class="mb-4">@Model.BrandName Detayları</h4>
    <div class="row">
        <div class="col-md-6">
            <div class="detail-item">
                <i class="fas fa-id-badge"></i> <strong>Marka ID:</strong> <span>@Model.BrandId</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-tag"></i> <strong>Marka Adı:</strong> <span>@Model.BrandName</span>
            </div>
        </div>
    </div>
    <div class="mt-4">
        <div class="detail-item align-items-start">
            <i class="fas fa-check-circle"></i> <strong>Aktif Mi?:</strong> <span>@(Model.IsActive ? "Evet" : "Hayır")</span>
        </div>
    </div>

    <div class="d-flex justify-content-end mt-4">
        <a asp-action="Index" class="btn btn-secondary me-2">
            <i class="fas fa-arrow-left"></i> Markalara Geri Dön
        </a>
    </div>
</div>
