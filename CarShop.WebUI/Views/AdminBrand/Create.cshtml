@model DTOsLayer.WebUIDTO.BrandDTO.CreateBrandDTO
@{
    ViewData["Title"] = "Yeni Marka Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="header">
    <div>
        <h2>Yeni Marka Ekle</h2>
        <p style="color: rgba(255, 255, 255, 0.7); margin-top: 0.5rem;">Yeni bir marka girişi yapın.</p>
    </div>
    <div class="user-info">
        <div class="user-avatar">AK</div>
        <div>
            <div>Admin Kullanıcı</div>
            <div style="font-size: 0.8rem; opacity: 0.7;">admin@example.com</div>
        </div>
    </div>
</header>

<div class="form-card">
    <form asp-controller="AdminBrand" asp-action="Create" method="post">
        @Html.AntiForgeryToken() 

        <div class="mb-3">
            <label for="brandName" class="form-label">Marka Adı</label>
            <input type="text" asp-for="BrandName" class="form-control" id="brandName" placeholder="Marka adını girin" required>
            <span asp-validation-for="BrandName" class="text-danger"></span>
        </div>


        <div class="mb-4 form-check">
            <input type="checkbox" asp-for="IsActive" class="form-check-input" id="isActive">
            <label class="form-check-label" for="isActive">Aktif Mi?</label>
        </div>

        <div class="d-flex justify-content-end">
            <a href="/Brand/Index" class="btn btn-secondary me-2">İptal</a>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </form>
</div>