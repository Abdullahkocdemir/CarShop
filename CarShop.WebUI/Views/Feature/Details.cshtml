@model DTOsLayer.WebUIDTO.FeatureDTO.GetByIdFeatureDTO
@using DTOsLayer.WebUIDTO.FeatureImageDTO // ResultFeatureImageDTO için

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="header">
    <div>
        <h2>Özellik Detayı</h2>
        <p style="color: rgba(255, 255, 255, 0.7); margin-top: 0.5rem;">Özelliğe ait detaylı bilgilere buradan ulaşabilirsiniz.</p>
    </div>
    <div class="user-info">
        <div class="user-avatar">AK</div>
        <div>
            <div>Admin Kullanıcı</div>
            <div style="font-size: 0.8rem; opacity: 0.7;">admin@example.com</div>
        </div>
    </div>
</header>

<div class="detail-card shadow">
    <h4 class="mb-4">@Model.Title Detayları</h4>
    <div class="row">
        <div class="col-md-6">
            <div class="detail-item">
                <i class="fas fa-id-badge"></i> <strong>Özellik ID:</strong> <span>@Model.FeatureId</span>
            </div>
            <div class="detail-item">
                <i class="fas fa-heading"></i> <strong>Başlık:</strong> <span>@Model.Title</span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="detail-item">
                <i class="fas fa-heading"></i> <strong>Küçük Başlık:</strong> <span>@Model.SmallTitle</span>
            </div>
        </div>
    </div>
    <div class="mt-4">
        <div class="detail-item align-items-start">
            <i class="fas fa-align-left"></i> <strong>Açıklama:</strong> <span>@Model.Description</span>
        </div>
    </div>

    <div class="mt-4">
        <div class="detail-item">
            <i class="fas fa-images"></i> <strong>Resimler:</strong>
            <div class="row row-cols-1 row-cols-md-3 g-4 mt-2">
                @if (Model.FeatureImages != null && Model.FeatureImages.Any())
                {
                    foreach (var image in Model.FeatureImages)
                    {
                                <div class="col">
                                    <img src="@image.ImageUrl" alt="Özellik Resmi" style="max-width: 100%; height: auto; border-radius: 5px; display: block; margin-top: 5px;" />
                                </div>
                    }
                }
                else
                {
                        <div class="col">
                            <span>Resim Yok</span>
                        </div>
                }
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end mt-4">
        <a asp-action="Index" class="btn btn-secondary me-2">
            <i class="fas fa-arrow-left"></i> Özelliklere Geri Dön
        </a>
        <a asp-action="Edit" asp-route-id="@Model.FeatureId" class="btn btn-warning">
            <i class="fas fa-pen-to-square"></i> Güncelle
        </a>
    </div>
</div>